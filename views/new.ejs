    display: none;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    height: 30px;
    width: 30px;
    cursor: pointer;
}

.bar {
    width: 30px;
    height: 4px;
    background-color: white;
    border-radius: 5px;
}

