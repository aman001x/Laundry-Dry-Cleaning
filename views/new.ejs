    display: flex;
    list-style: none;
    gap: 20px;
}

.nav-links li {
    display: inline;
}

.nav-links a {
    text-decoration: none;
    color: white;
    font-weight: 500;
}

/* Mobile View: Hide the nav links and show the hamburger button */
@media (max-width: 768px) {
    .nav-links {
        display: none; /* Hide menu on mobile */
        position: absolute;
        top: 60px;
        right: 20px;
        background-color: #333;
        flex-direction: column;
        padding: 10px 20px;
        border-radius: 5px;
        width: 200px;
    }

    .menu-toggle {
        display: flex; /* Show hamburger on mobile */
    }

    .nav-links.active {
        display: flex; /* Show menu when active class is added */
    }
}




    </style>
</head>
<body>

    <!-- Navigation -->
    <header>
        <nav>
            <div class="logo">QuickClean</div>
    
            <!-- Hamburger Button for Mobile View -->
            <div class="menu-toggle" id="mobile-menu">
                <span class="bar"><i class="fa-solid fa-list fa-2xl" style="color: white;"></i></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
    
            <!-- Navigation Links -->
            <ul class="nav-links" id="nav-links">
                <li><a href="/api/list">Home</a></li>
                <li><a href="/contact-list">Admin Dashboard</a></li>
                <li><a href="/admin">View All Requests</a></li>
                <li><a href="/api/contact">Contact</a></li>
            </ul>
        </nav>
    </header>
    

    <!-- Service Request Form -->
    <section id="serviceRequest" class="service-request">
        <h2>Request Our Services</h2>
        
        
        <form id="serviceForm" method="POST" action="/api/author">
            <input type="text" id="name" name="name" placeholder="Your Name" required>
            <input type="email" id="email" name="email" placeholder="Your Email" required>

            <h3>Select Services:</h3>
            <div class="service-option">
                <label for="clothes">Clothes</label>
                <input type="number" id="clothes" name="clothes" min="0" value="0" step="1">
            </div>
            <div class="service-option">
                <label for="pressing">Pressing</label>
                <input type="number" id="pressing" name="pressing" min="0" value="0" step="1">
            </div>
            <div class="service-option">
                <label for="laundry">Laundry</label>
                <input type="number" id="laundry" name="laundry" min="0" value="0" step="1">
            </div>
            <div class="service-option">
                <label for="dryCleaning">Dry Cleaning</label>
                <input type="number" id="dryCleaning" name="dryCleaning" min="0" value="0" step="1">
            </div>
            <div class="service-option">
                <label for="alterations">Alterations</label>
                <input type="number" id="alterations" name="alterations" min="0" value="0" step="1">
            </div>
            

            <textarea id="additionalNotes" name="additionalNotes" placeholder="Additional Notes (Optional)"></textarea>

            <button type="submit">Submit Request</button>
        </form>
    </section>
    <script>
        
    // Get the menu toggle button and the nav-links container
    const menuToggle = document.getElementById('mobile-menu');
    const navLinks = document.getElementById('nav-links');

    // Add an event listener to toggle the 'active' class on the nav-links when the menu button is clicked
    menuToggle.addEventListener('click', () => {
        navLinks.classList.toggle('active'); // This toggles the visibility of the nav links
    });



    </script>
    
</body>
</html>
